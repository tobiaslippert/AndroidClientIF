<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#046697">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Assignment Name"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="15sp"
                android:id="@+id/textView6"
                android:textColor="#E5C100"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Actual assignment name"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="15sp"
                android:id="@+id/Ass_Details_name"
                android:textColor="#FFFFFF"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="#3f403e"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description"
                android:layout_marginTop="7sp"
                android:layout_marginLeft="15sp"
                android:id="@+id/textView7"
                android:textColor="#E5C100"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Actual assignment description"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="15sp"
                android:id="@+id/Ass_Details_desc"
                android:textColor="#FFFFFF"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="#3f403e"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Object Name"
                android:layout_marginTop="7sp"
                android:layout_marginLeft="15sp"
                android:id="@+id/textView8"
                android:textColor="#E5C100"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Actual object name"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="15sp"
                android:id="@+id/Ass_Details_object_name"
                android:textColor="#FFFFFF"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="#3f403e"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description"
                android:layout_marginTop="7sp"
                android:layout_marginLeft="15sp"
                android:id="@+id/textView9"
                android:textColor="#E5C100"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Actual object description"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="15sp"
                android:id="@+id/Ass_Details_object_desc"
                android:textColor="#FFFFFF"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="#3f403e"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Customer"
                android:layout_marginTop="7sp"
                android:layout_marginLeft="15sp"
                android:id="@+id/textView10"
                android:textColor="#E5C100"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Actual object customer"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="15sp"
                android:id="@+id/Ass_Details_object_customer"
                android:textColor="#FFFFFF"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.2dp"
                android:background="#3f403e"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Location"
                android:layout_marginTop="7sp"
                android:layout_marginLeft="15sp"
                android:id="@+id/textView11"
                android:textColor="#E5C100"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Actual object location"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:layout_marginBottom="15sp"
                android:id="@+id/Ass_Details_object_location"
                android:textColor="#FFFFFF"
                />




            </LinearLayout>
    </ScrollView>
</LinearLayout>